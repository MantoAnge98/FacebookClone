<h2>Blog Page</h2>

<table>
    <tr>
        <th>Content</th>
        <th>Image</th>
        <th>See</th>
        <th>Edit</th>
        <th>Delete</th>
    </tr>
    <% @blog.each do |blog| %>
    <tr>
        <td><%= blog.content%></td>
        <td><div style="overflow:hidden;border-radius:50px;width:90px;height:90px;"><%=image_tag blog.image.url%></div></td>
        <td><%= link_to "Show", blog_path(blog.id) %></td>
        <td><%= link_to "Edit", edit_blog_path(blog.id) %></td>
        <td><%= link_to "Delete", blog_path(blog.id), method: :delete, data: {confirm:"Delete ?"}%></td>
    </tr>
    <% end %>
</table>


