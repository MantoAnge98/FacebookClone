<h2>Sign Up</h2>

<!-- Gérer les erreurs-->
<!-- Il est conseillé de mettre de code dans le Form_width-->
<% if @user.errors.any? %> 
<div id="error_explanation"  class="alert alert-danger" role="alert">> 
<h4><%= pluralize(@user.errors.count, "erreurs") %> empêche(nt) <%= @user.name %> d'être sauvegardée(s):</h4> 
<ul> 
<% @user.errors.full_messages.each do |message| %> 
    <li><%= message %></li> 
<% end %> 
</ul> 
</div> 
<% end %> 


<%= form_with(model:@user, local: true) do |f| %> 
<div class="row">
    <div class="col-25">
        <%= f.label :name %>
    </div>
    <div class="col-75">
        <%= f.text_field :name %> 
    </div>
</div>
<div class="row">
    <div class="col-25">
        <%= f.label :email %> 
    </div>
    <div class="col-75">
        <%= f.email_field :email %> 
    </div>
</div>
<div class="row">
    <div class="col-25">
        <%= f.label :password %> 
    </div>
    <div class="col-75">
        <%= f.password_field :password %> 
    </div>
</div>
<div class="row">
    <div class="col-25">
        <%= f.label :password_confirmation %> 
    </div>
    <div class="col-75">
        <%= f.password_field :password_confirmation %> 
    </div>
</div>
<%= f.submit "Create my account" %> 
<% end %> 